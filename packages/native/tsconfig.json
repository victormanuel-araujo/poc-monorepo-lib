{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components/index"],
      "@theme": ["../common/theme"],
      "@utils": ["src/utils/index"]
    }
  },
  "include": ["src", "../common"],
  "exclude": [
    "lib",
    "example",
    "node_modules",
    "**/**/*.spec.tsx",
    "**/**/*.stories.tsx",
  ],
}
