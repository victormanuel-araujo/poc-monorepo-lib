{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "@gama-academy/smash": ["index"],
      "@components": ["components/index"],
      "@theme": ["theme/index"],
      "@utils": ["utils/index"]
    }
  },
  "include": ["src"],
  "exclude": [
    "lib",
    "example",
    "node_modules",
    "**/**/*.spec.tsx",
    "**/**/*.stories.tsx",
  ],
}
