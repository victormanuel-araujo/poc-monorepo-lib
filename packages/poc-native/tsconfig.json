{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "poc-native": ["./src/index"],
      "@theme": ["../common/theme"],
      "@components": ["./src/index"],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
  },
  "exclude": [
    "../../node_modules",
    "node_modules",
    "**/**/*.spec.tsx",
    "**/**/*.stories.tsx",
  ]
}
