{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components/index"],
      "@utils": ["./src/utils/index"],
      "@theme": ["../common/theme/index"],
    }
  },
  "include": ["./src"],
  "exclude": [
    "lib",
    "example",
    "node_modules",
    "**/**/*.spec.tsx",
    "**/**/*.stories.tsx",
  ],
}
